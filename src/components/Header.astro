---
import Button from './Button.astro';
import logo from '../assets/full logo primary 2.svg';

const base = import.meta.env.BASE_URL;
---

<header class="fixed top-0 left-0 right-0 z-50">
  <div class="absolute inset-0 bg-background/80 backdrop-blur-md border-b border-border/50"></div>
  <div class="container relative">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href={base} class="flex items-center gap-3 group transition-transform duration-300 hover:scale-105">
        <img
          src={logo.src}
          alt="Softlane Studio"
          class="h-40 md:h-48 w-auto object-contain"
        />
      </a>
      
      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="#services" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          Services
        </a>
        <a href="#process" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          Process
        </a>
        <a href="#about" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
          About
        </a>
      </nav>
      
      <!-- CTA -->
      <Button href="https://forms.gle/48yz5JsFRhSXYfZR9" size="sm" variant="accent">
        Work with us ðŸ’¬
      </Button>
    </div>
  </div>
</header>
