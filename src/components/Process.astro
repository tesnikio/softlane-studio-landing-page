---
const steps = [
  {
    number: "01",
    title: "Vision & Alignment",
    description: "We align on brand intent, product scope, and the systems needed to win long-term.",
  },
  {
    number: "02",
    title: "Build & Launch",
    description: "We design and ship software products and platforms with speed and clarity.",
  },
  {
    number: "03",
    title: "Scale & Systemize",
    description: "We strengthen the stack, automate workflows, and make growth repeatable.",
  },
  {
    number: "04",
    title: "Iterate & Compound",
    description: "We stay involved post-launch to optimize performance and brand experience.",
  },
];
---

<section id="process" class="py-24 md:py-32 bg-gradient-subtle">
  <div class="container">
    <!-- Section header -->
    <div class="max-w-2xl mb-16">
      <h2 class="text-3xl md:text-4xl font-semibold tracking-tight mb-4 text-gradient-title">
        Our operating model
      </h2>
      <p class="text-lg text-muted-foreground">
        We treat software as a growth engine and brand asset, not a one-off project.
      </p>
    </div>
    
    <!-- Process steps -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-6">
      {steps.map((step, index) => (
        <div class="relative">
          <!-- Connector line -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-8 left-full w-full h-px bg-border/50"></div>
          )}
          
          <div class="mb-4">
            <span class="text-5xl font-bold text-muted/50">{step.number}</span>
          </div>
          <h3 class="text-xl font-medium mb-2 text-gradient-title">{step.title}</h3>
          <p class="text-muted-foreground text-sm leading-relaxed">
            {step.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

