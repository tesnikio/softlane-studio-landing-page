---
import stars from '../assets/Stars Yellow.svg';

const products = [
  {
    title: "Paperclip",
    status: "Coming soon",
    description: "A native macOS clipboard manager for fast, private, keyboard-first productivity.",
    tag: "macOS",
    href: "https://trypaperclip.app/",
  },
];
---

<section id="products" class="py-24 md:py-32">
  <div class="container">
    <div class="max-w-2xl mb-16">
      <h2 class="text-3xl md:text-4xl font-semibold tracking-tight mb-4 text-gradient-title">
        Our products & brands
      </h2>
      <p class="text-lg text-muted-foreground">
        A curated slate of in-house products built to compound long-term value.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {products.map((product) => (
        <a
          href={product.href}
          class="group relative block p-6 md:p-8 rounded-2xl card-neon"
          target="_blank"
          rel="noreferrer"
        >
          <div class="flex items-center justify-between gap-4 mb-6">
            <div class="flex items-center gap-3">
              <span class="text-[11px] uppercase tracking-[0.2em] text-foreground/80 border border-primary/30 px-3 py-1 rounded-full shadow-[0_0_8px_hsl(var(--primary)/0.15)]">
                {product.tag}
              </span>
              <span class="text-[11px] uppercase tracking-[0.2em] text-accent-foreground bg-accent/80 px-3 py-1 rounded-full">
                {product.status}
              </span>
            </div>
            <img
              src={stars.src}
              alt=""
              class="pointer-events-none h-7 w-auto opacity-70 transition-opacity duration-300 group-hover:opacity-100"
            />
          </div>
          <h3 class="font-caption text-2xl md:text-3xl font-semibold tracking-tight mb-3 text-gradient-hero">
            {product.title}
          </h3>
          <p class="text-foreground/70 text-sm md:text-base leading-relaxed max-w-xl">
            {product.description}
          </p>
          <div class="mt-5 text-sm text-accent">
            Get it soon â†’
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
