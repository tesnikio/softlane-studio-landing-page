---
import logo from '../assets/full logo primary 2.svg';

const currentYear = new Date().getFullYear();
---

<footer id="about" class="py-16 border-t border-border/50">
  <div class="container">
    <div class="grid md:grid-cols-4 gap-12 md:gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <div class="flex items-center gap-3 mb-4">
          <img
            src={logo.src}
            alt="Softlane Studio"
            class="h-32 md:h-40 w-auto object-contain"
          />
        </div>
        <p class="text-muted-foreground text-sm max-w-sm leading-relaxed">
          A venture and product studio that partners with ambitious founders 
          to build world-class software products.
        </p>
      </div>
      
      <!-- Links -->
      <div>
        <h4 class="font-medium mb-4 text-sm">Company</h4>
        <ul class="space-y-3">
          <li>
            <a href="#services" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              Services
            </a>
          </li>
          <li>
            <a href="#process" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              Process
            </a>
          </li>
          <li>
            <a href="#contact" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              Contact
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="font-medium mb-4 text-sm">Get in touch</h4>
        <ul class="space-y-3">
          <li>
            <a href="mailto:softlane.com@gmail.com" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              softlane.com@gmail.com
            </a>
          </li>
          <li>
            <a href="https://x.com/softlanestudio" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              Twitter / X
            </a>
          </li>
          <li>
            <a href="https://www.instagram.com/softlane.studio/" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              Instagram
            </a>
          </li>
          <li>
            <a href="https://www.linkedin.com/company/softlane-studio/" class="text-sm text-muted-foreground hover:text-foreground transition-colors">
              LinkedIn
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-border/30">
      <p class="text-xs text-muted-foreground">
