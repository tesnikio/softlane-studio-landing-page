---
import { ArrowRight } from 'lucide-astro';
import Button from './Button.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Warm glowing orb -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-accent/10 rounded-full blur-[120px] animate-float"></div>
  
  <div class="container relative z-10 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Tag -->
      <div class="opacity-0 animate-fade-up">
        <span class="inline-block px-4 py-1.5 text-xs font-medium tracking-wider uppercase text-muted-foreground border border-border/50 rounded-full mb-8">
          Venture & Product Studio
        </span>
      </div>
      
      <!-- Headline -->
      <h1 class="opacity-0 animate-fade-up animation-delay-100 text-4xl md:text-6xl lg:text-7xl font-semibold tracking-tight text-balance leading-[1.1] mb-6">
        We build software that{" "}
        <span class="text-gradient-accent">scales businesses</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="opacity-0 animate-fade-up animation-delay-200 text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-10 text-balance">
        Softlane Studio partners with founders and CTOs to design, build, and scale 
        high-quality software products. From idea to market leader.
      </p>
      
      <!-- CTAs -->
      <div class="opacity-0 animate-fade-up animation-delay-300 flex flex-col sm:flex-row items-center justify-center gap-4">
        <Button variant="accent" size="xl">
          Start a conversation
          <ArrowRight class="ml-1 w-4 h-4" />
        </Button>
        <Button variant="subtle" size="lg">
          View our work
        </Button>
      </div>
    </div>
  </div>
  
  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
</section>

