---
import Button from './Button.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Warm glowing orb -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-accent/10 rounded-full blur-[120px] animate-float"></div>
  
  <div class="container relative z-10 py-20 md:py-32">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Tag -->
      <div class="opacity-0 animate-fade-up">
        <span class="inline-block px-5 py-2 text-xs font-medium tracking-wider uppercase text-foreground/90 bg-background/80 rounded-full mb-8 border border-primary/40 shadow-[0_0_15px_hsl(var(--primary)/0.2),0_0_30px_hsl(var(--primary)/0.1),inset_0_0_20px_hsl(var(--primary)/0.05)]">
          Software-Led Brand & Product Studio
        </span>
      </div>
      
      <!-- Headline -->
      <h1 class="font-caption opacity-0 animate-fade-up animation-delay-100 text-4xl md:text-6xl lg:text-7xl font-semibold tracking-tight text-balance leading-[1.1] mb-6 text-gradient-hero">
        We build{" "}
        <span class="text-gradient-accent">software-led brands</span>{" "}
        that compound value
      </h1>
      
      <!-- Subheadline -->
      <p class="font-caption opacity-0 animate-fade-up animation-delay-200 text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-10 text-balance">
        Softlane Studio is a home for high-quality software products and brandsâ€”where
        technology, design, and execution come together to build durable, revenue-generating businesses.
      </p>
      
      <!-- CTAs -->
      <div class="opacity-0 animate-fade-up animation-delay-300 flex flex-col sm:flex-row items-center justify-center gap-4">
        <Button variant="accent" size="xl" href="https://forms.gle/48yz5JsFRhSXYfZR9">
          Work with us ðŸ’¬
        </Button>
        <Button variant="subtle" size="lg" href="#services">
          See how we create value
        </Button>
      </div>
    </div>
  </div>
  
  <!-- Bottom fade -->
  <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
</section>

