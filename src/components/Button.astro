---
interface Props {
  variant?: 'default' | 'accent' | 'subtle' | 'secondary' | 'ghost' | 'link' | 'outline' | 'destructive';
  size?: 'default' | 'sm' | 'lg' | 'xl' | 'icon';
  class?: string;
  href?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  variant = 'default', 
  size = 'default', 
  class: className = '',
  href,
  type = 'button'
} = Astro.props;

const baseStyles = "relative inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-lg text-base font-semibold ring-offset-background transition-colors duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 after:absolute after:inset-0 after:rounded-lg after:ring-1 after:ring-transparent after:transition-all after:duration-300 hover:after:ring-accent/60 hover:after:shadow-[0_0_24px_hsl(var(--accent)/0.45)]";

const variantStyles = {
  default: "bg-accent text-accent-foreground hover:bg-accent/90",
  destructive: "bg-destructive text-destructive-foreground hover:bg-destructive/90",
  outline: "border border-input bg-transparent text-foreground hover:bg-secondary/40",
  secondary: "bg-accent text-accent-foreground hover:bg-accent/85",
  ghost: "text-foreground hover:bg-secondary/40",
  link: "text-primary underline-offset-4 hover:underline",
  accent: "bg-accent text-accent-foreground hover:bg-accent/90 hover:shadow-[0_0_32px_hsl(var(--accent)/0.5)]",
  subtle: "bg-transparent text-foreground/80 hover:text-foreground",
};

const sizeStyles = {
  default: "h-10 px-4 py-2 text-base",
  sm: "h-9 rounded-md px-3 text-sm",
  lg: "h-12 rounded-md px-8 text-lg",
  xl: "h-14 rounded-lg px-10 text-lg font-semibold",
  icon: "h-10 w-10",
};

const classes = [baseStyles, variantStyles[variant], sizeStyles[size], className].join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

