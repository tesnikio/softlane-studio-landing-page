---
import { Layers, Rocket, LineChart, Boxes, Palette, Infinity } from 'lucide-astro';

const services = [
  {
    icon: Rocket,
    title: "Product & Brand Creation",
    description: "We design, build, and launch software products and brands from idea to market-ready.",
  },
  {
    icon: Palette,
    title: "Brand Experience Through Software",
    description: "Customer-facing apps, design systems, and workflows that make the brand feel consistent and premium.",
  },
  {
    icon: Boxes,
    title: "Systems & Platform Foundations",
    description: "Custom tools, internal systems, and infrastructure that power execution and scale.",
  },
  {
    icon: LineChart,
    title: "Growth & Revenue Enablement",
    description: "Every project is tied to outcomes: acquisition, conversion, retention, and brand equity.",
  },
  {
    icon: Layers,
    title: "Studio Partnership",
    description: "We partner long-term via retainers, revenue participation, or equityâ€”aligned with outcomes.",
  },
  {
    icon: Infinity,
    title: "Continuous Iteration",
    description: "We stay involved after launch to improve performance, product quality, and customer experience.",
  },
];
---

<section id="services" class="py-24 md:py-32">
  <div class="container">
    <!-- Section header -->
    <div class="max-w-2xl mb-16">
      <h2 class="text-3xl md:text-4xl font-semibold tracking-tight mb-4">
        How we create value
      </h2>
      <p class="text-lg text-muted-foreground">
        Software is the brand. We build systems, products, and experiences that compound over time.
      </p>
    </div>
    
    <!-- Services grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service, index) => {
        const Icon = service.icon;
        return (
          <div 
            class="group p-6 md:p-8 rounded-2xl bg-background/60 border border-border/50 hover:border-accent/40 transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_16px_48px_-28px_hsl(var(--primary)/0.35)]"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="w-10 h-10 rounded-lg bg-accent/15 flex items-center justify-center mb-5 group-hover:bg-accent/25 transition-colors">
              <Icon class="w-5 h-5 text-accent" />
            </div>
            <h3 class="font-caption text-xl font-semibold tracking-tight mb-2">{service.title}</h3>
            <p class="text-foreground/70 text-sm leading-relaxed">
              {service.description}
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>

